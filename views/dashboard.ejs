      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

</section>

<section id="facilities">

  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-3 col-md-6">
        <i class="icon fas fa-paper-plane fa-3x"></i>
        <h4>Free Shipping</h4>
        <p> On Order Over 500 Rupees</p>
      </div>
      <div class="col-lg-3 col-md-6">
        <i class="icon fa fa-lock fa-lg fa-3x"></i>
        <h4>Secure Payment</h4>
        <p>100% Security payment</p>
      </div>
      <div class="col-lg-3 col-md-6">
        <i class="icon fa fa-tags fa-lg fa-3x"></i>
        <h4> At Best price</h4>
        <p>Resonable Book Price</p>

      </div>
      <div class="col-lg-3 col-sm-6 ">
        <i class="icon fa fa-retweet fa-lg fa-3x"></i>
        <h4>Free Return</h4>
        <p>45 Days Return Service</p>
      </div>
    </div>
  </div>
</section>

<section id="testimonials">
  
  <div class="heading">
    <center>
      <h2><b> <em>BEST SELLERS</em></b>
        <span class="span4"></span>
    </center>
    </h2>

  </div>
  <!--images-->
  <div class="row">

    <% products.forEach(function(product){ %>

    <div class="col-lg-3 col-md-4 col-sm-6">
      <div class="card h-100 border-light">
        <div class="imageContainer">
          <img src="<%= product.image %>" class=" card-img-top" style="height:434px">
          <div class="hoverText">
            <a href="/add-to-cart/<%= product._id %>" title="Add To Cart" role="button"><button
                class="btn hoverButton"><i class="icon1 fas fa-cart-plus"></i></button></a>
            <a href="/add-to-wishlist/<%= product._id %>" title="Add To Wishlist" role="button"><button
                class="btn hoverButton"><i class="icon1 fas fa-heart"></i></button></a>
            <button class="btn hoverButton modalbtn" id="button1" href="#modal<%= product.modal_no %>"
              title="Quick View"><i class="icon1 fas fa-eye"></i></button>
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= product.title %> </h5>
          <p class="card-text">price: <%= product.price %></p>
        </div>
      </div>
    </div>
    <div id="modal<%= product.modal_no %>" class="modal">
      <div class="product-view">
        <div class="close-button">X</div>
        <div class="prduct-image">
          <img src="<%= product.image %>">
        </div>
        <div class="prduct-desc">
          <h2><%= product.title %></h2>
          <h5><b>Author:</b> <%= product.author %></h5>
          <h5><b>Product Code:</b> <%= product.product_id %></h5>
          <h5><b> Description :</b><%= product.description %></h5>
          <p><b>Language:</b> <%= product.language %></p>

          <div class="price">
            <h4 class="old-price">Price: <%= product.price %></h4>
          </div>
          <label for="quantity" class="lable1">Quantity:</label>
          <input type="number" id="quantity" name="quantity" min="1" max="7" value="1">
          <br>
          <a href="/add-to-cart/<%= product._id %>" class=" btn1 btn btn-dark" title="Add To Cart" role="button"><i
              class="icon1 fas fa-cart-plus"></i>Add to Cart</a>
          <a href="/add-to-wishlist/<%= product._id %>" class=" btn1 btn btn-dark" title="Add To Cart" role="button"><i
              class="icon1 fas fa-cart-plus"></i>Add to Wishlist</a>
          <p><b>Shipping:</b>Dispatched within 2-3 working days.</p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>


</section>



